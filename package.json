{
  "name": "andika",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "cm": "cz",
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "lint": "eslint --ext .js,.ts .",
    "build:watch": "tsc --watch",
    "build-func": "yarn run build andika-backend && cp apps/andika-backend/package.json dist/apps/andika-backend",
    "emulators:start": "yarn run build-func && firebase emulators:start --inspect-functions",
    "emulators:shell": "yarn run build-func && firebase functions:shell",
    "emu:start": "yarn run build andika-backend && xcopy apps\\andika-backend\\package.json dist\\apps\\andika-backend && firebase emulators:start --inspect-functions",
    "emulators:stop": "lsof -ti tcp:4401 | xargs && lsof -ti tcp:8002 | xargs  && lsof -ti tcp:9001 | xargs",
    "deploy": "firebase deploy --only functions",
    "deploy-host": "firebase deploy --only hosting",
    "logs": "firebase functions:log",
    "prepare": "is-ci || husky install"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~15.0.0",
    "@angular/cdk": "^15.1.0",
    "@angular/common": "~15.0.0",
    "@angular/compiler": "~15.0.0",
    "@angular/core": "~15.0.0",
    "@angular/fire": "^7.5.0",
    "@angular/forms": "~15.0.0",
    "@angular/platform-browser": "~15.0.0",
    "@angular/platform-browser-dynamic": "~15.0.0",
    "@angular/router": "~15.0.0",
    "@datorama/akita": "^8.0.0",
    "@datorama/akita-ngdevtools": "^7.0.0",
    "@fortawesome/angular-fontawesome": "^0.12.1",
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@nrwl/angular": "^15.2.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.0",
    "font-awesome": "^4.7.0",
    "is-ci": "^3.0.1",
    "ngx-mat-select-search": "^7.0.0",
    "ngx-quill": "^20.0.1",
    "openai": "^3.1.0",
    "quill": "^1.3.7",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~15.0.0",
    "@angular-eslint/eslint-plugin": "~15.0.0",
    "@angular-eslint/eslint-plugin-template": "~15.0.0",
    "@angular-eslint/template-parser": "~15.0.0",
    "@angular/cli": "~15.0.0",
    "@angular/compiler-cli": "~15.0.0",
    "@angular/language-service": "~15.0.0",
    "@angular/material": "^15.1.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@google-cloud/functions-framework": "^3.1.2",
    "@ngneat/tailwind": "^7.0.3",
    "@nrwl/cypress": "15.3.3",
    "@nrwl/eslint-plugin-nx": "15.3.3",
    "@nrwl/jest": "15.3.3",
    "@nrwl/linter": "15.3.3",
    "@nrwl/node": "15.3.3",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "15.3.3",
    "@theunderscorer/nx-semantic-release": "^2.0.0",
    "@types/jest": "28.1.1",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "autoprefixer": "^10.4.13",
    "commitizen": "^4.3.0",
    "cypress": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~8.15.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.0",
    "husky": "^8.0.0",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "jest-preset-angular": "~12.2.3",
    "ng-packagr": "~15.0.0",
    "nx": "15.3.3",
    "postcss": "^8.4.21",
    "postcss-import": "~14.1.0",
    "postcss-preset-env": "~7.5.0",
    "postcss-url": "~10.1.3",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.2.4",
    "ts-jest": "28.0.5",
    "ts-node": "10.9.1",
    "typescript": "~4.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./tools/scripts/pre-push $HUSKY_GIT_STDIN"
    }
  },
  "lint-staged": {
    "*.{js,json,md,ts}": [
      "yarn format --uncommitted"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nxrelease": {
    "repositoryUrl": "https://github.com/andika-ai/andika"
  }
}
